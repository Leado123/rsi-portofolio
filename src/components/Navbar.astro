---
import "../styles/global.css"
import { NavbarSearch } from "./NavbarSearch.tsx";
import { fetchPosts, processPosts } from "../utils/posts.ts";

const posts = await fetchPosts();
const processedPosts = processPosts(posts);
---

<nav class="fixed top-0 left-0 right-0 z-[100] p-2 pl-8 pr-8 w-full backdrop-blur-lg border-b-2 shadow-md bg-white/80 pointer-events-auto" id="container">
    <div class="flex items-center justify-between w-full pointer-events-auto">
        <h3 class="text-lg font-bold"><a href="/">Leo Wen</a></h3>
        <div class="flex-1 flex justify-center pointer-events-auto relative z-10">
            <NavbarSearch client:load posts={processedPosts} />
        </div>
        <div class="w-[100px]"></div> <!-- Spacer for centering -->
    </div>
</nav>

