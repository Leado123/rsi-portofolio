---
interface Props {
  text: string;
  className?: string;
  tag?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'p' | 'span';
  textAlign?: 'left' | 'center' | 'right' | 'justify';
}

const { 
  text, 
  className = '', 
  tag = 'p',
  textAlign = 'center'
} = Astro.props;

const Tag = tag;
---

<Tag 
  class={`fade-in-text ${className}`}
  style={`text-align: ${textAlign};`}
>
  {text}
</Tag>

<style>
  .fade-in-text {
    animation: fadeIn 0.6s ease-out forwards;
    opacity: 0;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

