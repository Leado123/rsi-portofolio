---
import BaseLayout from "@/layouts/BaseLayout.astro";
import PostGrid from "@/components/PostGrid.astro";
import { SearchPosts } from "@/components/SearchPosts.tsx";
import { AnimatedColorBends } from "@/components/AnimatedColorBends.tsx";
---

<BaseLayout>
    <div
        id="animated-background"
        class="fixed inset-0 w-screen h-screen min-h-screen min-w-screen z-0 pointer-events-none"
        style="view-transition-name: background;"
    >
        <AnimatedColorBends
            client:load
            colors={[
                "#ff1493",
                "#00ff88",
                "#00d4ff",
                "#ff6b00",
                "#ff00ff",
                "#00ffff",
                "#ffff00",
                "#ff0080",
            ]}
            rotation={30}
            speed={0.2}
            scale={1.0}
            frequency={1.5}
            warpStrength={1.2}
            mouseInfluence={1.0}
            parallax={0.8}
            noise={0.1}
            transparent={true}
        />
    </div>
    <div class="prose w-full max-w-none p-4">
        <PostGrid />
    </div>
</BaseLayout>
                    