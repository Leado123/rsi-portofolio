---
import BaseLayout from "@/layouts/BaseLayout.astro";
import PostGrid from "@/components/PostGrid.astro";
import { SearchPosts } from "@/components/SearchPosts.tsx";
import { AnimatedColorBends } from "@/components/AnimatedColorBends.tsx";

export const prerender = false;

const siteUrl = import.meta.env.PUBLIC_SITE_URL || Astro.url.origin;
---

<BaseLayout 
  title="Leo Wen's Blog"
  description="Blog by Leo Wen, who is a junior in high school in Southern California, whose interested in Genomics and Synthetic Biology"
  url="/"
>
    <div
        id="animated-background"
        class="fixed inset-0 w-full h-screen min-h-dvh z-0 pointer-events-none"
        style="view-transition-name: background;"
    >
        <AnimatedColorBends
            client:load
            colors={[
                "#ff1493",
                "#00ff88",
                "#00d4ff",
                "#ff6b00",
                "#ff00ff",
                "#00ffff",
                "#ffff00",
                "#ff0080",
            ]}
            rotation={30}
            speed={0.2}
            scale={1.0}
            frequency={1.5}
            warpStrength={1.2}
            mouseInfluence={1.0}
            parallax={0.8}
            noise={0.1}
            transparent={true}
        />
    </div>
    <div class="z-100 min-h-1/4 gap-2 flex flex-col text-center justify-center place-items-center pt-8 pb-8">
        <h1 class="text-5xl font-bold">Leo Wen's Blog</h1>
        <p class="max-w-1/3 text-gray-700">My name is Leo Wen, and I am from Southern California. This blog is an archive for my various writings and notes. I am currently a junior in high school studying to become a researcher in bioinformatics or genetic engineering.        </p>
    </div>
    <div class="prose w-full max-w-none p-4">
        <PostGrid />
    </div>
</BaseLayout>
                    